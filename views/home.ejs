        <link rel="stylesheet" href="style.css">

</head>
<body>
<div class="input-group mb-3 justify-content-center p-2">
<form method="post" action="/">
<label for="User">Choose shekh:</label>
<select class="form-control " name="user" id="User" value="dfds">
    <option value=""><%=d%></option>
    <option value="Abdul Basit">Abdul Basit</option>
    <option value="Abdullah Basfar">Abdullah Basfar</option>
    <option value="Abdurrahmaan As-Sudais">Abdurrahmaan As-Sudais</option>
    <option value="Abu Bakr Ash-Shaatree">Abu Bakr Ash-Shaatree</option>
    <option value="Ahmed ibn Ali al-Ajamy">AAhmed ibn Ali al-Ajamy</option>
</select>  
  <label for="Surah">Choose Surah:</label>
    <select class="form-control" name="surah" id="Surah">
            <option value="">
                <%=su%>
            </option>
            <option value="1">Al-Fatihah</option>
            <option value="2">Al-Baqarah</option>
            <option value="3">Al-'Imran</option>
            <option value="4">An-Nisa'</option>
            <option value="5">Al-Ma'idah</option>
    </select>
    <button class="btn btn-primary mt-2" type=" submit">Search</button>
</form>
</div>
<div class=""> 
<audio id="myAudio" controls autoplay>
<source src="https://cdn.islamic.network/quran/audio-surah/128/<%=identifier%>/<%=surah%>.mp3" >
</audio>
<div class="p2">
<button class="p3 btn btn-primary" onclick="play()">Play</button>
<button class="btn btn-primary " onclick="stop()">stop</button>
</div>
</div>
<script src="/js/main.js"></script>
</body>
</html>